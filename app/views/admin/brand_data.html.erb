<table class="table is-striped cornered mx-auto">
	<th>Clothing</th>
	<th>Name</th>
	<th><%= sort_link(@q, :views)%></th>
	<th>State/Country</th>
	<th>Post Count</th>
	<th>visits</th>

	<%@brands.each do |brand|%>
	<tr>
		<td><%if brand.image.attached?%>
				<%=image_tag(brand.image_handler(brand.image,"small"), class:"cornered")%>
			<%end%>		
		</td>
		<td><%=link_to brand.name , edit_brand_path(brand), target:"_blank",class:"s-link bold"%></td>
		<td><%=brand.views%></td>
		<td><%=brand.state%>/<%=brand.location%></td>
		<td><%=brand.posts.count%></td>
		<td>

<%=brand.total_activities_count%>			

		</td>

	</tr>
	<%end%>
</table>


<%= render 'component/pagy', item:@brands%>