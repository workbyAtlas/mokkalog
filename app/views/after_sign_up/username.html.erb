<%=form_for @user, method: :put,url: wizard_path do |f|%>
  <% if @user.errors.any? %>
    <%=render 'component/error', errors: @user.errors%>
  <% end %>

<div class="rw50 mx-auto taller">
  <div class="title is-4 mt-6 center secondary-t">Thank you for signing up!</div>
	<div class="secondary-t bold center">Choose your username</div>
    <div class="rw50 mx-auto mt-2">
	  	<%= f.text_field :username, class:"input mokka-ph mt-2", placeholder:"Username" %>
    </div>
  <div class="center">
    <%= f.submit "Continue", class:"button is-warning bold mt-4", style:"border:1px solid #654321;"%>
  </div>
</div>



 <%end%>

