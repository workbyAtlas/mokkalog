<%=form_for @brand, url: wizard_path, method: :put do |form|%>
  <% if @brand.errors.any? %>
    <%=render 'component/error', errors: @brand.errors%>
  <% end %>
  
<div class="rw70 mx-auto">

  <div class="title is-4 center secondary-t mt-6">Let's personalize your brand page!</div>
<div class="center secondary-t bold"><u>Customize Brand Banner</u></div>
<div class="mx-auto text-center">Let's add a banner image to make your brand page more personalized! <span class="bold">We recommend switching banner text to white when adding a brand image & it will make the words pop!</span></div>

<%= render "brands/image_preview_for_banner", form: form, brand: @brand %>

  <div class="mt-3">
    <%= form.text_field :header, class:"input mokka-ph", placeholder:"Banner Text"%>
    <%= form.text_field :brand_text, class:"input  mokka-ph", placeholder:"Banner Text Color" %>
  </div>

<div class="center">
  <%=form.submit "Continue", class:" my-2 button is-warning bold", style:"border: 1px solid #654321"%>
  <%=link_to "Skip", next_wizard_path, class:"ml-2 button is-warning bold is-light"%>
    
</div>

</div>
<%end%>