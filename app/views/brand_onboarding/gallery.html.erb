<%=form_for @brand, url: wizard_path, method: :put do |form|%>
  <% if @brand.errors.any? %>
    <%=render 'component/error', errors: @brand.errors%>
  <% end %>
<div class="title is-4 center secondary-t mt-6">Last one, I swear!</div>

<div class="center secondary-t bold"><u>Gallery</u></div>
<div class="center">Add up to 3 images to that best represents <%=@brand.name%>.</div>
<div class="columns">
	<div class="column"><%= render "brands/components/gallery_1", form: form, brand: @brand %></div>
	<div class="column"><%= render "brands/components/gallery_2", form: form, brand: @brand %></div>
	<div class="column"><%= render "brands/components/gallery_3", form: form, brand: @brand %></div>
</div>


<div class="center my-2">
	<%=form.submit "Continue", class:"mokka-btn btn-warning button"%>
	<%=link_to "Skip", next_wizard_path, class:"ml-2 mokka-btn btn-l-warning button"%>	
</div>
</div>
<%end%>