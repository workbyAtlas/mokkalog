<%=form_for @brand, url: wizard_path, method: :put do |form|%>
  <% if @brand.errors.any? %>
    <%=render 'component/error', errors: @brand.errors%>
  <% end %>
	<div class="title is-4 center secondary-t"><%=@brand.name%> is a great name!</div>

	<div class="">
		<div class="center text-center">Let's upload a profile picture for your brand.</div>
	    <%= render "brands/image_preview", form: form, brand: @brand %>

		<div class="center my-2">
			<%=form.submit "Continue", class:"mokka-btn btn-warning button" %>
			<%=link_to "Skip", next_wizard_path, class:"ml-2 mokka-btn btn-l-warning button"%>
				
		</div>
	</div>
<%end%>