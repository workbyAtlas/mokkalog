<div data-controller="previews">

<%#FORM%>

<%#IMAGE PREVIEW%>
<div class="image-preview">
<% if brand.image.attached?%>
    <div class="subtitle is-6 center mt-2">Image Preview</div>
    <div class="center mt-2">
    <%= image_tag brand.image, data: { previews_target: 'preview' }, style:"width:300px; height:300px;", class:"cornered"%>
    </div>
<%else%>
    <div class="center mt-2">
    <%= image_tag "download.jpg", data: { previews_target: 'preview' }, style:"width:300px; height:300px;", class:"cornered"%>
    </div>
<%end%>
</div>

<div class="file is-warning center mt-2">
  
  <label class="file-label">
    <%= form.file_field :image,
    direct_upload: true,
    data: { previews_target: "input", action: "change->previews#preview"}, class:"file-input" %>

    <span class="file-cta bold" style="border:1px solid #654321;">
      <span class="file-icon">
        <i class="fas fa-upload"></i>
      </span>
      <span class="file-label">
        Primary fileâ€¦
      </span>
    </span>
  </label>
</div> 


</div>