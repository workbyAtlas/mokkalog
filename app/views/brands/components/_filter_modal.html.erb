<div class="modal-background" data-action="click->catalog#filterToggle"></div>
<div class="modal-card">
<header class="modal-card-head">
  <p class="modal-card-title bold secondary-t center">Filters</p>
  <div class="delete" data-action="click->catalog#filterToggle"></div>
</header>
<section class="modal-card-body">
<!-- Content ... -->
<br/>
<!-- MAIN FILTER -->
<!-- BADGES -->
<div class="my-0 title is-5 secondary-t mb-2"><u>Badges</u></div>
<div>Badges are only given to verified brands & makes it easier to distinquish clothing. Read more about them <%=link_to "here", badges_path, data:{turbo_frame: "_top"}, target:"_blank", class:"s-link"%></div>
<div class="badgegrid rw60 mx-auto">
<div class="my-1">
  <label class="m-checkbox">
  <%= check_box_tag('q[verification_i_cont_any][]', "True", false,data: { action: "change->catalog#checkboxToggle" },  oninput: 'this.form.requestSubmit();') %>
  <span class="m-checkmark center-checkmark">
    <div class="hover">
      <i class="fa-solid fa-circle-check fa-small mbeige"></i>
      <div class="hover-content center secondary-t">Verified</div>
    </div>
  </span>
  </label>
</div>
<div class="my-1">
  <label class="m-checkbox">
  <%= check_box_tag('q[badge_i_cont_any][]', "certified", false, data: { action: "change->catalog#checkboxToggle" },  oninput: 'this.form.requestSubmit();') %>
  <span class="m-checkmark center-checkmark">
    <div class="hover">
    <i class="fa-solid fa-mug-saucer fa-small" style="color:#ffd700;"></i>
    <div class="hover-content center secondary-t">Certified</div>
    </div>
  </span>
  </label>
</div>
<div class="my-1">
  <label class="m-checkbox">
  <%= check_box_tag('q[badge_i_cont_any][]', "sustain", false, data: { action: "change->catalog#checkboxToggle" },  oninput: 'this.form.requestSubmit();') %>
  <span class="m-checkmark center-checkmark">
    <div class="hover">
    <i class="fa-solid fa-seedling fa-small mgreen"></i>
    <div class="hover-content center secondary-t">Sustainable</div>
    </div>
  </span>
  </label>
</div>
<div class="my-1">
  <label class="m-checkbox">
  <%= check_box_tag('q[badge_i_cont_any][]', "handmade", false, data: { action: "change->catalog#checkboxToggle" },  oninput: 'this.form.requestSubmit();') %>
  <span class="m-checkmark center-checkmark">
    <div class="hover">
    <i class="fa-solid fa-scissors fa-small mred"></i>
    <div class="hover-content center secondary-t">Handmade</div>
    </div>
  </span>
  </label>
</div>
<div class="my-1">
  <label class="m-checkbox">
  <%= check_box_tag('q[badge_i_cont_any][]', "global", false, data: { action: "change->catalog#checkboxToggle" },  oninput: 'this.form.requestSubmit();') %>
  <span class="m-checkmark center-checkmark">
    <div class="hover">
    <%= render 'component/badges/global', size:"small" %>
    <div class="hover-content center secondary-t">Global Shipping</div>
    </div>
  </span>
  </label>
</div>
</div>

<!-- BADGES -->
<div class="my-0 title is-5 secondary-t mb-2"><u>Styles</u></div>
	<div class="flexed-wcc category-filter-grid lgrey cornered bs p-2">
	<% @styles.each do |x| %>
		<div class="my-1">
		  <label class="m-checkbox mid-cbox">
		  <%= check_box_tag('q[styles_id_eq_any][]', x.id, false, data: { action: "change->catalog#checkboxToggle" },  oninput: 'this.form.requestSubmit();')%>
		  <span class="m-checkmark"><%=x.name%></span>
		  </label>
		</div>
	<%end%>
</div>


<!--Category -->










</section>
<footer class="modal-card-foot">
    <div>

            <div data-action="click->catalog#filterToggle" class="button is-warning bold" style="border: 1px solid #654321;">Apply Filter</div>
        
        <%=link_to "Clear", brands_path , data: {turbo_frame: "_top"}, class:"button is-warning is-light bold", style:"border:1px solid #cbb595"%>
    </div>
</footer>
</div>