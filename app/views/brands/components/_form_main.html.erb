<div class="columns">
  <div class="column">
<%= render "image_preview", form: form, brand: brand %>

  </div>
  <div class="column">

  <div>
    <%= form.label :Name, class:"label mt-2" %>
    <%= form.text_field :name, class:"input" %>
  </div>
  <div>
    <%= form.label :Link, class:"label mt-2" %>
    <%= form.text_field :link, class:"input", placeholder:"Please include https://" %>
  </div>
  <div>
    <div class="label mt-2"><i class="fa-brands fa-instagram" style="color:#654321"></i></div>
    <%= form.text_field :ig_link, class:"input", placeholder:"Please include https://" %>
  </div>
  <div>
    <div class="label mt-2"><i class="fa-brands fa-x-twitter" style="color:#654321"></i></div>
    <%= form.text_field :x_twitter, class:"input", placeholder:"Please include https://" %>
  </div>
  <div>
    <%= form.label "Description", class:"label mt-2" %>
    <%= form.rich_text_area :body, placeholder:"Write a short description!" %>
  </div>
  <%if @auth%>
  <div>
    <hr class="bst" />
    <div>Editor</div>
    <%= form.label :verification, class:"label mt-2" %>
    <%= form.text_field :verification, class:"input" %>
  </div>
  <%end%>
  </div>
</div>