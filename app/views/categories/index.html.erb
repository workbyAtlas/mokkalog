<p style="color: green"><%= notice %></p>

<h1>Categories</h1>
<section class="center">

<table class="table">
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Count</th>
    <th>Link</th>
  </tr>
  <% @categories.each do |category| %>
    <tr>
      <td><%=category.id%></td>
      <td><%=category.name%></td>
      <td><%=category.posts.count%></td>
      <td><%= link_to "Show", category %></td>
    </tr>
  <% end %>
</table>
</div>

<%= link_to "New category", new_category_path %>
