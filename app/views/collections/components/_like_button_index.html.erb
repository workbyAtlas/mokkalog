<span class="flexed mx-5" id="<%="collection_#{collection.id}_like_button"%>">
	<%= button_to like_collection_path(collection), class: "button button-like-text mr-1", method: :post, form: { data: { turbo: true } } do %>
		<%if current_user.liked?(collection)%>
		  <i class="fa-solid fa-heart fa-lg mx-1 mred"></i>
		<%else%>
		  <i class="fa-regular fa-heart fa-lg mx-1 mred"></i>
		<%end%>

	<%end%>
</span>
