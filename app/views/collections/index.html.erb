<%@title = "Collections"%>
<style>
.radio-style:hover{background-color: rgba(0, 0, 0, 0.5);}

.custom-radio input[type="radio"] {
  opacity: 0;
  position: absolute;
}

.custom-radio input[type="radio"]:checked + .radio-style {
  font-weight:bold;
  color:white;
  border-bottom: 2px solid white;
  border-right: 1px solid white;
}
</style>

<%=render 'searchbar'%>

<%=turbo_frame_tag :results do%>
  <div class="center bold my-2">Showing <%=@collections.count%> collections</div>
  <section class="center">
  <div class="flexed-wc">
    <% @collections.each do |collection| %>
      <%= render collection %>

    <% end %>
  </div>
  </section> 
<%end%>


