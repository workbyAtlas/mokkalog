
<%=form_with(model: [ commentable, Comment.new(commentable: commentable) ], local: true) do |f| %>
  <div class="mx-auto rw70 notification">
     <div class="title is-5">Comment</div>

     <div class="flexed-c">

		<div class="select">
		<%= f.select :c_type, ['Reg', 'Info', 'Buy', 'Sell']%>
		</div>

  
        <div class="file mx-2 is-warning">
          <label class="file-label">
            <%= f.file_field :image, class:"file-input" %>
            <span class="file-cta bold" style="border:1px solid #654321;">
              <span class="file-icon">
                <i class="fas fa-upload"></i>
              </span>
              <span class="file-label">
                Choose a fileâ€¦
              </span>
            </span>
          </label>
        </div>
       

     </div>
     <%= f.text_area :body, class:"textarea my-2 mokka-ph", placeholder: "Write you comment here!" %>
	   <%= f.text_field :link, class:"input is-small mokka-ph", placeholder: "Put your link here (make sure you include http://)" %>
     <%= f.submit "Reply", class: "button is-warning bold my-2", style:"border:1px solid #654321;"%>
  </div>

   <% end %>