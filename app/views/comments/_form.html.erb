
<%=form_with(model: [post, post.comments.build]) do |f| %>
  <div class="f-comment notification">
     <div class="title is-5">Comment</div>

     <div class="flexed-c">

		<div class="select">
		<%= f.select :c_type, ['Reg', 'Buy', 'Sell']%>
		</div>

        <div class="file mx-2 is-warning">
          <label class="file-label">
            <input class="file-input" type="file" name="resume">
            <span class="file-cta">
              <span class="file-icon">
                <i class="fas fa-upload"></i>
              </span>
              <span class="file-label">
                Choose a fileâ€¦
              </span>
            </span>
          </label>
        </div>

     </div>
     <%= f.text_area :body, class:"textarea my-2", placeholder: "Write you comment here!" %>
	 <%= f.text_field :link, class:"input", placeholder: "Put your link here (make sure you include http://)" %>
     <%= f.submit "Reply", class: "button purp-btn my-2"%>
  </div>

   <% end %>