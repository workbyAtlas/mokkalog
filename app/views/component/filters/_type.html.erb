<duv class="d-none-desktop">
<div class="typegrid mx-auto">
	<div>
	  <label class="m-checkbox">
	  <%= check_box_tag('q[c_type_i_cont_any][]', "MW", false, data: { action: "change->catalog#checkboxToggle" },  oninput: 'this.form.requestSubmit();') %>
	  <%#= check_box_tag('q[material_i_cont_any][]', x, false) %>
