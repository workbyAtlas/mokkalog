

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>



<section class="section center">
<div class="notification rw30 has-background-white">
<div class="center-down">
<h2 class="title is-3 mb-0"><span class="secondary-t">Change your</span></h2>
<h2 class="title is-3 mt-0"><span class="secondary-t">password</span></h2>
</div>
<br/>


  <div class="field">
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:"input mokka-ph my-2", placeholder:"Password" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"input mokka-ph", placeholder:"Confirm Password" %>
  </div>

  <div class="actions center">
    <%= f.submit "Change my password", class:"button is-warning bold", style:"border-color:#654321;color:#654321;" %>
  </div>

<br/>
<div class="center-down">
<%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %>
<%= link_to "Go back to Sign in", new_session_path(resource_name) %>
</div>

</div>
</section>













<% end %>

