<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<section class="section center">
<div class="notification rw30 has-background-white">
  <div class="bold text-center title is-3 mb-3">Forgot Your Password?</div>
<br/>


  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input mokka-ph", placeholder:"Email" %>
  </div>

  <div class="actions center">
    <%= f.submit "Send me reset password instructions", class:"button is-warning bold", style:"border-color:#654321;color:#654321;" %>
  </div>
<% end %>
<br/>
<div class="center-down">
<%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class:"text-center" %>
<%= link_to "Go back to Sign in", new_session_path(resource_name) %>
</div>

</div>
</section>