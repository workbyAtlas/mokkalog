

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<section class="section">
  <div class="container rw30">
      <div class="notification is-white gbt">
        <div class="title is-3">Sign in</div>
        
        <div class="field">
          <%= f.label :email, class:"label" %>
          <div class="control">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input" %>
          </div>
        </div>


        <div class="field">
          <%= f.label :password, class:"label" %>
          <div class="control">
            <%= f.password_field :password, autocomplete: "current-password", class:"input"%>
          </div>
        </div>

        <div>
          Don't have an account? <%=link_to "Register here", new_user_registration_path, class:"p-link"%>
        </div>
         <div>
          <%=link_to "Forgot Password?", new_user_password_path, class:"p-link"%>
        </div>
        




        <hr class="border-purp-top" />
  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class:"button is-warning" %>
  </div>

      </div>

  </div>
</section>

<% end %>




