<%@title = "About"%>

<style>
   .bs{
      background-color: #dccdc9;
   }
   @media (max-width: 480px) {
     .onboarding3{
       width: 103px;
       height:103px;
     }

</style>
<section data-controller="about">
   <div class="title is-2 secondary-t center mt-4 text-center">Welcome <%=@current_user.username%>!</div>
   <section class="flexed-wc lgrey p-2">
      <div class="square-swatch onboarding3 m-3 m-shadow bs" data-about-target="btn1" data-action="click->about#openTab1">
         <div class="mb-2"><i class="fa-solid fa-magnifying-glass fa-2xl"></i></div>
         <div class="title is-5 secondary-t">Explore</div>
      </div>
      <div class="square-swatch onboarding3 m-3 m-shadow" data-about-target="btn2" data-action="click->about#openTab2">
         <div class="mb-2"><i class="fa-solid fa-gear fa-2xl"></i></div>
         <div class="title is-5 secondary-t">Customize</div>
      </div>
      <div class="square-swatch onboarding3 m-3 m-shadow" data-about-target="btn4" data-action="click->about#openTab4">
         <div class="mb-2"><i class="fa-brands fa-instagram fa-2xl"></i></div>
         <div class="title is-5 secondary-t">Follow Us</div>
      </div>
      <div class="d-none" data-about-target="btn3"></div>
   </section>
   <section class="lgrey section">
      <div class="bs cornered rw70 mx-auto p-4" style="background-color:#f5f5f5;">
         <div data-about-target="tab1"><%=render 'onboarding/components/discover'%></div>
         <div data-about-target="tab2" class="d-none"><%=render 'onboarding/components/introduction'%></div>
         <div data-about-target="tab3" class="d-none"><%#render 'pages/about_components/brand'%></div>
         <div data-about-target="tab4" class="d-none"><%=render 'onboarding/components/follow'%></div>
         <br/>
      </div>
   </section>
</section>
<div class="center lgrey">
<%=link_to "Start Exploring", root_path, class:"mokka-btn btn-warning button my-4"%>
</div>


