
<div class="post-card m-2">

  
<div class="center">
  <%=link_to (image_tag (post.image_post)), post if post.image.attached?%>
  <%if not post.image.attached?%>
  <%=image_tag "download.jpg", class:"postimg"%> 
  <%end%>   
</div>




  <div class="title is-5" style="margin: 0;"><strong><%=link_to post.title, post, class:"secondary-t"%></strong></div>
  
  <div><i><span class="brand-link"><%= post.branded%></span></i></div>



 
  <%if post.archive == "archived"%>
  <div class="tag" style="border: 2px solid #c88595; color:#c88595; font-weight:bold;">archived</div>
  <%elsif post.archive == "project"%>
  <div class="tag" style="border: 2px solid #cbb595;font-weight:bold;">project</div>
  <%else%>
  <div><%=if post.price.blank? then "#N/A" else number_to_currency(post.price) end%></div>
  <%end%>
  <%if true == false %>
  <div class="flexed-end ml-2"><%=post.likes.count%></div>
  <%end%>
  <%#=render 'likes/private_button', post: post, like_status: like_status %>


</div>

