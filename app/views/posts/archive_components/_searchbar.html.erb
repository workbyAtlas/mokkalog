<%= search_form_for @query, data: {turbo_frame: :results, turbo_action: 'advance'}, url: archive_path, html: { class: "form-inline" } do |f| %>
      
      
  <div class="section is-medium section-corner-top mokka-carousel" style="background: linear-gradient(0deg, #00000088 30%, #ffffff44 100%), url('<%= asset_path('still_stair.jpg') %>');background-size:cover;"> 


    <div class="title is-3 center outline">Welcome to the Archive</div>
    <div class="center">
      <div class="subtitle is-5 rw50 outline" style="text-align:center;">
        Some clothing can be lost to the sand of time. we help curate these clothings from getting lost. Maybe you came here to get inspired.
      </div>
    </div>
    <hr style="border-color:white;"/>
    <div class="center mt-2">
      <%=link_to "sign up", new_user_registration_path, class:"trans-btn button-like-text outline mr-4"%>
      <%=link_to "catalog", posts_path, class:"trans-btn button-like-text outline"%>
    </div>
  </div>

        <div class="mx-auto mt-4 center rw50">
        
        <%=render 'component/filters/c_type'%>

        <%= f.search_field :title_or_color_or_material_or_tags_name_or_brand_name_or_category_name_or_brand_location_i_cont_any, oninput: 'this.form.requestSubmit();', class:"input bb mokka-ph l-cornered", placeholder:"Search here..." %>

          <%= f.button :submit, class: "button is-warning r-cornered ", style: "border: 2px solid black;border-left:none;" do %>
            <i class="fa-solid fa-magnifying-glass secondary-t bold"></i>
          <% end %>
          <%= render 'component/filters/filterbox'%>
      </div>

    <section class="home-nav mt-4 p-2 home-nav-border light-primary">
        <label class="custom-radio">
            <%= f.radio_button :season_or_brand_verification_or_brand_badge_or_brand_styles_name_or_brand_location_or_category_name_or_tags_name_or_color_or_brand_tags_id_eq_any, ' ', checked: true, oninput: 'this.form.requestSubmit();' %> 
            <div class="radio-style">
                <i class="fa-solid fa-home fa-xl mt-3"></i><div class="radio-font">All</div>
            </div>
        </label>
        <%#=render 'posts/home_components/radio_box', css:"fa-solid fa-circle-check", word:"Verified", fill:"True", f:f%>


        <%#=render 'posts/home_components/radio_box', css:"fa-solid fa-wand-magic-sparkles", word:"Unique", fill:"Avant Garde", f:f%>
    </section>
      
<div class="modal" data-catalog-target="filter">
<%= render 'component/filters/filter_modal', type:"home", path:root_path%>
</div>
<%end%>