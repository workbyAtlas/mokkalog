
<div data-controller="previews" class="center-down">
<div>
  <% if post.image3.attached?%>
    <div class="subtitle is-6 center mt-2">Image Preview</div>
    <div class="mt-2">
    <%= image_tag post.img_sq_small(post.image3), data: { previews_target: 'preview' }, style:"width:100px; height:auto;"%>
    </div>
  <%else%>
    <div class="mt-2">
    <%= image_tag "download.jpg", data: { previews_target: 'preview' }, style:"width:100px; height:100px;"%>
    </div>
  <%end%>
</div>

<div class="center">
  <div class="file is-warning center mx-2">
  <label class="file-label">
  <%= form.file_field :image3,
  direct_upload: true,
  data: { previews_target: "input", action: "change->previews#preview"}, class:"file-input" %>
  <span class="file-cta">
  <span class="file-icon">
  <i class="fas fa-upload"></i>
  </span>
  <span class="file-label">
  Primary fileâ€¦
  </span>
  </span>
  </label>
  </div>
</div>
</div>