<div class="d-none" id="share"><%=request.url%></div>
<section class="section p-2">
  <div class="columns">
      <%=render "posts/components/image_holder"%>

    <div class="column bpx">

      <div class="show-info">
        
        <%if @badges == true%>
        <div style="width:100%;">
          <span class="float-r"><%=render "posts/components/badges"%></span>
        </div>
        <%end%>
        <div class="mt-3 mb-0 title is-3 secondary-t text-center"><%=@post.title %></div>


            <div class="my-2 title is-5"><%=link_to @post.branded, @post.brand, class:"s-link"%></div>


        <div>
          <%if @post.archive == "archived"%>
            <span class="tag bs">archived</span>
            <%= number_to_currency(@post.price) if @post.price.present?%>
          <%elsif @post.archive == "project" %>
            <span class="tag bs">project</span>
            <%= number_to_currency(@post.price) if @post.price.present?%>
          <%else%>
            <%=if @post.price.blank? then "#N/A" else number_to_currency(@post.price) end%>
          <%end%>  
        </div>

        <div class="mt-4 bsb flexed">
          <%#LIKE BUTTON%>
          <div class="mx-1 mb-4">
            <%if current_user%>
            <%= render "posts/like_btn_private", post: @post, like_status: current_user.liked?(@post) %>
            <%else%>
            <%= render "posts/components/like_btn_public", post: @post%>
            <%end%>  
          </div>
          <div class="mx-1 mb-4 button is-warning" style="border: 2px solid #654321;" onclick="showdiv('visitmodal')">Visit</div>
          <div class="mx-1 mb-4 button green-btn" style="border: 2px solid #206644;" onclick="copy('share','share-button')" id="share-button">Share</div>

          <%if current_user%>
          <%=render 'posts/components/favorite_btn', post: @post, fav_status: current_user.favorited?(@post)%>
          <%else%>

            <div class="button bp mx-1">
                <div class="hover">
                <span class="material-symbols-outlined mt-1">
                checkroom
                </span>
                <div class="hover-content center">Add to Closet</div>
              </div>
            </div>
          <%end%>

          <div><%#= link_to "Closet", closets_update_path(post: @post), id: 'closet_link, class:"mb-4 button is-danger" %></div>
        </div>
        <%# DEV BOX------------------------------------------%>

<%if current_user == @post.user or @auth_e == "editor" or current_user == @post.brand.user%>
        <div class=" flexed-c mt-4 bsb">
          <div class="mx-1 mb-4 button bs">ID: <%=@post.id%></div>
          <div class="mx-1 mb-4 button p-btn bs"><%= pluralize(@post.views,"view")%></div>
          <div class="mx-1 mb-4"><%= link_to "Edit", edit_post_path(@post), class:"button is-warning", style:"border:2px solid #654321;" %></div>
          <div class="mx-1 mb-4"><%= button_to "Destroy", @post, method: :delete,data: { turbo_confirm: "Are you sure?" }, class:"button red-btn", style:"border: 2px solid #bf193c;" %></div>   
        </div>
<%end%>
        <%# TAG BOX-------------------------------------------%>
        <%= render 'posts/components/tag_for_post'%>
        <%# INFO BOX-------------------------------------------%>
        <%= render "posts/components/info_box"%>

      </div> 
    </div>
  </div>

<%# DESCRIPTION Form---------------------------------------------%>
<section data-controller="tab" class= "section">

<div class="tabs is-boxed is-centered mb-0">
  <ul>
    <li data-tab-target="btn1" data-action="click->tab#openTab1">
      <a>
        <span>Comments</span>
      </a>
    </li>
    <li class="is-active" data-tab-target="btn2" data-action="click->tab#openTab2">
      <a>
        <span>Similar</span>
      </a>
    </li>
    <li data-tab-target="btn3" data-action="click->tab#openTab3">
      <a>
        <span>Detail</span>
      </a>
    </li>
  </ul>
</div>
<br/>



<div data-tab-target="tab1" class="d-none"><%= render 'posts/components/tabs/comments'%></div>
<div data-tab-target="tab2"><%= render 'posts/components/tabs/recommendation'%></div>
<div data-tab-target="tab3" class="d-none"><%= render 'posts/components/tabs/detail'%></div>
</section>


<%if @visit_modal == true%>
<div class="d-none" id="visitmodal">
<%=render 'posts/components/visit_modal'%>
</div>
<%else%>
<div class="d-none" id="visitmodal">
<%=render 'posts/components/visit_modal_og'%>
</div>
<%end%>
</section>








