
<div class="notification mt-4 p-3 bs info-box m-shadow">
   <ul>
      <li class="s-link"><strong>Information:</strong></li>
      <li><strong class="mx-2">Type:</strong><%=@type%></li>
      <li><strong class="mx-2">Category:</strong><%=@post.categoryed%></li>
      <%#<li><strong class="mx-2">Sub-Category:</strong><%=@post.sub_category%</li>%>
      <li><strong class="mx-2">Color:</strong><%=@post.color%></li>
      <li><strong class="mx-2">Material:</strong><%= if @post.material.blank? then "undefined" else @post.material end%></li>
      <li><strong class="mx-2">Season:</strong><%= if @post.season.blank? then "undefined" else @post.season end%></li>

      <%if not @post.brand.location.blank?%>
      <li><strong class="mx-2">Origin:</strong><%=@post.brand.country_label%></li>
      <%end%>


      <%if true == false%>
      <li><strong class="mx-2">Uploaded_by:</strong><%=link_to "@"+ @post.user.username, user_path(@post.user), class:"purp-link"%>
      <%if not @post.edited_by.blank?%>

      <li><strong class="mx-2">Last Edited By:</strong>
      	@<%=@post.edited_by%>

      </li>
      <%end%>
      <%end%>

   </ul>
</div>

<%if current_user == @post.user or @auth_e%>
<div id="dev-tool" class="relative notification m-shadow lgrey info-box bs">
<div class="hide-btn" onclick="hidediv('dev-tool')">[hide]</div>
   <div class="bold center">Visits</div>
   <div class="center">Total Visits: <%=@post.activities.count%></div>
   <div class="post-chart cornered p-2">
   <%= line_chart @post.activities.group_by_day(:created_at).count, label:"Visits" %>
   </div>

</div>
<%end%>

    