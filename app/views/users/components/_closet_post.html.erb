<div class="mx-4 my-5 center-down closet_post post-shadow relative">
	
	<% if post.image.attached?%>
		<%=link_to image_tag(post.image_handler(post.image,"normal"), class:"cornered"), post%>
	<% else %>
	    <div class="center"><%= image_tag ("download.jpg"), class: "immg cornered"  %></div>
	<% end %>
	<%shortened_title = post.title.truncate(30, omission: '', separator: ' ')%>
	<%display_title = shortened_title.length > 20 ? "#{shortened_title[0..16]}..." : shortened_title%>
	<%=link_to display_title, post, style:"color:white;" %>
</div>