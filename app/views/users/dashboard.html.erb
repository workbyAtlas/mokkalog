<style>html{background-color:#f5f5f5;}</style>
<%@title = @user.username%>
<div class="center title is-4 secondary-t">Dashboard</div>


<%=render 'users/dashboard/general'%>

<%if true == false%>
<section data-controller="dashboard">
<aside class="dashboard-menu p-2" data-dashboard-target="menu">
	<ul class="dashboard-menu-list">
		<li data-action="click->dashboard#openMain1" data-dashboard-target="list1" class="bold">General</li>
		<li data-action="click->dashboard#openMain2" data-dashboard-target="list2">Analytics</li>
		<li data-action="click->dashboard#openMain3" data-dashboard-target="list3">Upgrades</li>
	</ul>
</aside>

<section class="dashboard-main">


<div data-dashboard-target="Main1">
<%=render 'users/dashboard/general'%>
</div>

<div data-dashboard-target="Main2" class="d-none">
<%=render 'users/dashboard/analytic'%>
</div>

<div data-dashboard-target="Main3" class="d-none">
<%=render 'users/dashboard/upgrade'%>
</div>


</section>
</section>
<%end%>

